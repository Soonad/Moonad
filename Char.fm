// An unicode codepoint.
Char: Type
  U16

// Receives a hex char (0-9, a-f, A-F) and returns its value as a Nat.
Char.hex_value(chr: Char): Maybe(Nat)
  if Bool.and(U16.gte(chr,'0'),U16.lte(chr,'9')) then
    Maybe.some<_>(U16.to_nat(U16.sub(chr,'0')))
  else if Bool.and(U16.gte(chr,'a'),U16.lte(chr,'f')) then
    Maybe.some<_>(Nat.add(U16.to_nat(U16.sub(chr,'a')),10))
  else if Bool.and(U16.gte(chr,'A'),U16.lte(chr,'F')) then
    Maybe.some<_>(Nat.add(U16.to_nat(U16.sub(chr,'A')),10))
  else
    Maybe.none<_>

