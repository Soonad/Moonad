Char.newline: Char
  Char.new(
    Bit.0, Bit.0, Bit.0, Bit.0,
    Bit.0, Bit.0, Bit.0, Bit.0,
    Bit.0, Bit.0, Bit.0, Bit.0,
    Bit.1, Bit.0, Bit.1, Bit.0)

Char.parse.type(str: String): Type
  case str:
  | Unit;
  | Char;

// Parses a character. Example: `Char.parse("x")`
Char.parse(str: String): Char.parse.type(str)
  case str:
  | Unit.new;
  | str.head;
  : Char.parse.type(str.self);

